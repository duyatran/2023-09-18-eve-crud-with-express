<!DOCTYPE html>
<html>
  <!-- <head> is not displayed in the viewport -->
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Books</title>
    <!-- JAVASCRIPT IMPORTS -->
    <!-- STYLESHEETS IMPORTS -->
  </head>

  <body>
    <h1> List of books: </h1>
    <!-- Look through `books` and display its title -->
    <% for (const bookId in myBooks) { %>
        <% const book = myBooks[bookId]; %>
        <a href="/books/<%= bookId%>"> <p><%= book.title %></p> </a>

        <form method="POST" action="/books/<%= bookId%>/delete">
          <button type="submit">Delete</button>
        </form>

    <% } %>

    <form method="POST" action="/books">

      <label for="title">Title</label>
      <input type="text" name="title" id="title">
      <br />

      <label for="author">Author</label>
      <input type="text" name="author" id="author">
      <br />

      <label for="year">Year</label>
      <input type="text" name="year" id="year">

      <button type="submit">Create book</button>
    </form>
  </body>
</html>